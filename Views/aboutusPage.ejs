<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>About Us - <%= siteName %></title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/common_footer.css">
  <link rel="stylesheet" href="../css/about_us_page.css">
  <link rel="stylesheet" href="/css/common_footer.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <nav>
    <div class="navbar-container">
      <a href="/" class="site-name"><%= siteName %></a>
      <div class="navbar-links">
        <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">HOME</a>
        <a href="/User/about" class="<%= currentPage === 'about' ? 'active' : '' %>">ABOUT US</a>
        <a href="/Department/view" class="<%= currentPage === 'departments' ? 'active' : '' %>">DEPARTMENTS</a>
        <a href="/doctors" class="<%= currentPage === 'doctors' ? 'active' : '' %>">DOCTORS</a>
        <a href="/appointments/book" class="<%= currentPage === 'book' ? 'active' : '' %>">BOOK NOW</a>
        <% if (user) { %>
          <div class="user-menu">
            <a href="/User/profile" class="profile-link">
              <i class="fas fa-user-circle"></i>
              <%= user.FName %> <%= user.LName %>
            </a>
            <div class="dropdown-menu">
              <a href="/User/profile">My Profile</a>
              <a href="/appointments">My Appointments</a>
              <a href="/User/settings">Settings</a>
              <a href="/User/logout" class="logout-btn">Logout</a>
            </div>
          </div>
        <% } else { %>
          <a href="/User/login" class="<%= currentPage === 'login' ? 'active' : '' %>">Login</a>
          <a href="/Patient/signup" class="signup-btn <%= currentPage === 'signup' ? 'active' : '' %>">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="page-header">
    <h1>About Us</h1>
    <p>Learn more about <%= siteName %> and our commitment to healthcare excellence.</p>
  </section>

  <!-- About Us Section -->
  <section class="about-us-container">
    <% aboutUsSections.forEach(section => { %>
      <div class="about-card">
        <h2><%= section.title %></h2>
        <% if (section.content) { %>
          <p><%= section.content %></p>
        <% } else if (section.list) { %>
          <ul>
            <% section.list.forEach(item => { %>
              <li><%= item %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    <% }) %>
  </section>
  
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-left">
        <h3>Prime Care</h3>
        <p>Committed to providing quality healthcare for all.</p>
      </div>
      <div class="footer-links">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/contact">Contact Us</a>
      </div>
      <div class="footer-socials">
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> Prime Care. All Rights Reserved.</p>
    </div>
  </footer>
  <script src="../public/javascript/about_us_page.js"></script>
</body>
</html>
