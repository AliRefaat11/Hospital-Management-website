<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Departments - Prime Care</title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/common_footer.css">
  <link rel="stylesheet" href="/css/department_page.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
 
  <nav>
    <div class="navbar-container">
      <a href="#" class="site-name">PrimeCare</a>
      <div class="navbar-links">
        <a href="/" class="<%= activePage === 'home' ? 'active' : '' %>">HOME</a>
        <a href="/User/about" class="<%= activePage === 'about' ? 'active' : '' %>">ABOUT US</a>
        <a href="/Department/view" class="<%= activePage === 'departments' ? 'active' : '' %>">DEPARTMENTS</a>
        <a href="/doctors" class="<%= activePage === 'doctors' ? 'active' : '' %>">DOCTORS</a>
        <a href="/appointments/book" class="<%= activePage === 'book' ? 'active' : '' %>">BOOK NOW</a>
        <% if (user) { %>
          <div class="user-menu">
            <a href="/User/profile" class="profile-link">
              <i class="fas fa-user-circle"></i>
              <%= user.FName %> <%= user.LName %>
            </a>
            <div class="dropdown-menu">
              <a href="/User/profile">My Profile</a>
              <a href="/appointments">My Appointments</a>
              <a href="/User/settings">Settings</a>
              <a href="/User/logout" class="logout-btn">Logout</a>
            </div>
          </div>
        <% } else { %>
          <a href="/User/login" class="<%= activePage === 'login' ? 'active' : '' %>">Login</a>
          <a href="/Patient/signup" class="signup-btn <%= activePage === 'signup' ? 'active' : '' %>">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>
  <section class="page-header">
    <h1>Our Departments</h1>
    <p>Explore the medical departments available at Prime Care</p>
  </section>
  <section class="departments-container">
    <% departments.forEach(function(department) { %>
      <div class="department-section">
        <h2><%= department.departmentName %></h2>
        <p><%= department.description %></p>
        <div class="doctor-grid">
          <% if (department.doctors && department.doctors.length > 0) { %>
            <% department.doctors.forEach(function(doctor) { %>
              <div class="doctor-card">
                <i class="fas fa-user-md doctor-icon"></i>
                <h3><%= doctor.userId.FName %> <%= doctor.userId.LName %></h3>
                <p><%= doctor.specialization %></p>
              </div>
            <% }); %>
          <% } else { %>
            <p>No doctors found for this department.</p>
          <% } %>
        </div>
      </div>
    <% }); %>
  </section>
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-left">
        <h3>Prime Care</h3>
        <p>Committed to providing quality healthcare for all.</p>
      </div>
      <div class="footer-links">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
        <a href="#">Contact Us</a>
      </div>
      <div class="footer-socials">
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> Prime Care. All Rights Reserved.</p>
    </div>
  </footer>
  <script src="/javascript/department_page.js"></script>
</body>
</html>
