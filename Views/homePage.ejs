<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= hospital.name %> - Meet Our Doctors</title>
  <link rel="stylesheet" href="css/home_page.css">
  <link rel="stylesheet" href="/css/common_footer.css">
  <link rel="icon" href="/images/logo.jpeg" type="image/jpeg">
  <meta name="theme-color" content="#3498db">
</head>

<body>
  <nav>
    <div class="navbar-container">
      <a href="/" class="site-name"><%= hospital.name %></a>
      <div class="navbar-links">
        <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">HOME</a>
        <a href="/User/about" class="<%= currentPage === 'about' ? 'active' : '' %>">ABOUT US</a>
        <a href="/Department/view" class="<%= currentPage === 'departments' ? 'active' : '' %>">DEPARTMENTS</a>
        <a href="/doctors" class="<%= currentPage === 'doctors' ? 'active' : '' %>">DOCTORS</a>
        <a href="/appointments/book" class="<%= currentPage === 'book' ? 'active' : '' %>">BOOK NOW</a>
        <% if (user) { %>
          <div class="user-menu">
            <a href="/User/profile" class="profile-link">
              <i class="fas fa-user-circle"></i>
              <%= user.FName %> <%= user.LName %>
            </a>
            <div class="dropdown-menu">
              <a href="/User/profile">My Profile</a>
              <a href="/appointments">My Appointments</a>
              <a href="/User/settings">Settings</a>
              <a href="/User/logout" class="logout-btn">Logout</a>
            </div>
          </div>
        <% } else { %>
          <a href="/User/login" class="<%= currentPage === 'login' ? 'active' : '' %>">Login</a>
          <a href="/Patient/signup" class="signup-btn">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>

  <section class="hero">
    <div class="container">
      <h2><%= hospital.tagline %></h2>
      <p><%= hospital.subTagline %></p>
      <a href="/appointments/book" class="btn">Book an Appointment</a>
    </div>
  </section>

  <section class="about">
    <div class="container">
      <h3>About Us</h3>
      <p><%= hospital.about %></p>
    </div>
  </section>

  <section class="services">
    <div class="container">
      <h2>Our Services</h2>
      <div class="service-grid">
        <% services.forEach(function(service) { %>
          <div class="service-item">
            <img src="<%= service.icon %>" width="100" alt="<%= service.name %>-icon">
            <h3><%= service.name %></h3>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <section class="doctors">
    <div class="container">
      <h3>Meet Our Doctors</h3>
      <div class="doctor-grid">
        <% featuredDoctors.forEach(function(doctor) { %>
          <div class="doctor-card">
            <img src="<%= doctor.profileImage || '/images/account-icon-33.png' %>" alt="<%= doctor.name %>">
            <h4><%= doctor.name %></h4>
            <p><%= doctor.specialization %></p>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <section class="why-choose-us">
    <div class="container">
      <h3>Why Choose Us</h3>
      <ul>
        <% features.forEach(function(feature) { %>
          <li>âœ” <%= feature %></li>
        <% }); %>
      </ul>
    </div>
  </section>

  <section class="testimonials">
    <div class="container">
      <h3>What Our Patients Say</h3>
      <div class="testimonial-slider">
        <% testimonials.forEach(function(testimonial) { %>
          <div class="testimonial">
            <p>"<%= testimonial.content %>"</p>
            <cite>- <%= testimonial.author %></cite>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <section class="appointment-cta">
    <div class="container">
      <h3><%= cta.heading %></h3>
      <a href="/appointments/book" class="btn"><%= cta.buttonText %></a>
    </div>
  </section>

  <footer class="footer">
    <div class="footer-content">
      <div class="footer-left">
        <h3>Prime Care</h3>
        <p>Committed to providing quality healthcare for all.</p>
      </div>
      <div class="footer-links">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/contact">Contact Us</a>
      </div>
      <div class="footer-socials">
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> Prime Care. All Rights Reserved.</p>
    </div>
  </footer>

  <script>
    /*
    const serverData = {
      hospital: <%- JSON.stringify(hospital) %>,
      user: <%- JSON.stringify(user) %>,
      currentPage: '<%= currentPage %>'
    };*/
  </script>
  <script src="javascript/home_page.js"></script>
</body>
</html>
