<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'PrimeCare Hospital Sign Up' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/sign_up_page.css">
</head>
<body>
    <nav>
        <div class="navbar-container">
            <a href="/" class="site-name">PrimeCare</a>
            <div class="navbar-links">
                <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">HOME</a>
                <a href="/User/about" class="<%= currentPage === 'about' ? 'active' : '' %>">ABOUT US</a>
                <a href="/Department/view" class="<%= currentPage === 'departments' ? 'active' : '' %>">DEPARTMENTS</a>
                <a href="/doctors" class="<%= currentPage === 'doctors' ? 'active' : '' %>">DOCTORS</a>
                <a href="/appointments/quick-appointment" class="<%= currentPage === 'book' ? 'active' : '' %>">BOOK NOW</a>
                <a href="/User/login" class="<%= currentPage === 'login' ? 'active' : '' %>">Login</a>
                <a href="/Patient/signup" class="signup-btn <%= currentPage === 'signup' ? 'active' : '' %>">Sign Up</a>
            </div>
        </div>
    </nav>

    <!-- Sign Up Form -->
    <div class="container">
        <h2><%= formTitle || 'Sign Up' %></h2>
        
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="error-message server-error"><%= errorMessage %></div>
        <% } %>
        
        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
            <div class="success-message"><%= successMessage %></div>
        <% } %>

        <form action="/Patient/signup" method="POST" id="signupForm">
            <div class="input-group">
                <input type="text" id="FName" name="FName" placeholder=" " required
                       value="<%= typeof formData !== 'undefined' && formData.FName ? formData.FName : '' %>">
                <label for="FName">First Name</label>
            </div>
            
            <div class="input-group">
                <input type="text" id="LName" name="LName" placeholder=" " required
                       value="<%= typeof formData !== 'undefined' && formData.LName ? formData.LName : '' %>">
                <label for="LName">Last Name</label>
            </div>
            
            <div class="input-group">
                <input type="email" id="Email" name="Email" placeholder=" " required
                       value="<%= typeof formData !== 'undefined' && formData.Email ? formData.Email : '' %>">
                <label for="Email">Email</label>
            </div>
            
            <div class="input-group">
                <input type="password" id="Password" name="Password" placeholder=" " required>
                <label for="Password">Password</label>
            </div>
            
            <div class="input-group">
                <input type="number" id="Age" name="Age" placeholder=" " required min="0" max="120"
                       value="<%= typeof formData !== 'undefined' && formData.Age ? formData.Age : '' %>">
                <label for="Age">Age</label>
            </div>
            
            <div class="input-group">
                <input type="tel" id="PhoneNumber" name="PhoneNumber" placeholder=" " required
                       value="<%= typeof formData !== 'undefined' && formData.PhoneNumber ? formData.PhoneNumber : '' %>">
                <label for="PhoneNumber">Phone Number</label>
            </div>
            
            <div class="input-group">
                <label for="Gender">Gender</label>
                <select id="Gender" name="Gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            
            <div class="input-group">
                <label for="bloodType">Blood Type</label>
                <select id="bloodType" name="bloodType" required>
                    <option value="">Select Blood Type</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
            </div>
            
            <div class="input-group">
                <input type="text" id="medicalNo" name="medicalNo" placeholder=" " required
                       value="<%= typeof formData !== 'undefined' && formData.medicalNo ? formData.medicalNo : '' %>">
                <label for="medicalNo">Medical Number</label>
            </div>
            
            <button type="submit" class="signup-btnm">
                Sign Up
                <i class="fas fa-user-plus"></i>
            </button>
        </form>
        
        <a href="/User/login" class="login-link">Already have an account? Log In</a>
        <div class="error-message" id="errorMessage"></div>
    </div>
    
    <script>
        document.getElementById('signupForm').addEventListener('submit', function(e) {
            const password = document.getElementById('Password').value;
            const errorMessage = document.getElementById('errorMessage');
            
            if (password.length < 6) {
                e.preventDefault();
                errorMessage.textContent = 'Password must be at least 6 characters long';
                return;
            }
            errorMessage.textContent = '';
        });
    </script>
</body>
</html>